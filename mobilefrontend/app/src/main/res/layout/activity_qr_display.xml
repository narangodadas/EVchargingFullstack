<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EV Charging QR Code"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginBottom="30dp" />

        <!-- Station Info -->
        <TextView
            android:id="@+id/tvStationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Station Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvBookingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Time"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:textColor="#666" />

        <!-- QR Code Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:elevation="8dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/ivQR"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Instructions -->
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generating QR code..."
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Usage Instructions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#E8F5E8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How to Use:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Show this QR code at the charging station\n2. Station operator will scan it\n3. Start your charging session\n4. QR code will be validated automatically"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>